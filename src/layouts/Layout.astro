---
import BaseHead from '@components/BaseHead.astro';
import '@styles/a_reset.scss';
import '@styles/main.scss';
import '@styles/typography.scss';

export interface Props {
	title: string;
	description?: string;
	url?: URL | string;
	image?: string;
}

const title = Astro.props.title || 'Tervetuloa kotisivuilleni';
const description = Astro.props.description || 'Juha Halmun portfolio ja kotisivut';
---

<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/WebPage" lang="fi">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<slot />
</html>
